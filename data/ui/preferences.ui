<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="TextpiecesPreferences" parent="HdyPreferencesWindow">
    <property name="can-swipe-back">True</property>
    <child>
      <object class="HdyPreferencesPage">
        <property name="visible">True</property>
        <property name="icon-name">settings-symbolic</property>
        <property name="title" translatable="yes">General</property>
        <child>
          <object class="HdyPreferencesGroup">
            <property name="visible">True</property>
            <property name="title" translatable="yes">General</property>
            <child>
              <object class="HdyActionRow">
                <property name="title" translatable="yes">Prefer dark theme</property>
                <property name="activatable-widget">prefer_dark</property>
                <child>
                  <object class="GtkSwitch" id="prefer_dark">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="HdyPreferencesGroup">
            <property name="visible">True</property>
            <property name="title" translatable="yes">Editor</property>
            <child>
              <object class="HdyActionRow">
                <property name="title" translatable="yes">Show line numbers</property>
                <property name="activatable-widget">show_line_numbers</property>
                <child>
                  <object class="GtkSwitch" id="show_line_numbers">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="HdyActionRow">
                <property name="can-focus">False</property>
                <property name="title" translatable="yes">Show grid</property>
                <property name="activatable-widget">show_grid</property>
                <child>
                  <object class="GtkSwitch" id="show_grid">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="HdyActionRow">
                <property name="title" translatable="yes">Tab to spaces</property>
                <property name="activatable-widget">tab_to_spaces</property>
                <child>
                  <object class="GtkSwitch" id="tab_to_spaces">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
