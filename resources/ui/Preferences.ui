<?xml version="1.0" encoding="UTF-8"?>
<interface>

  <requires lib="gtk" version="4.2" />
  <requires lib="libadwaita" version="1.0" />

  <template class="TextPiecesPreferences" parent="AdwPreferencesWindow">
    <property name="search-enabled">false</property>
    <child>
      <object class="AdwPreferencesPage">
        <property name="title" translatable="yes">General</property>
        <property name="name">general-settings</property>
        <property name="icon-name">preferences-symbolic</property>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="yes">Editor</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Editor Font</property>
                <property name="activatable">True</property>
                <property name="action-name">prefs.select-font</property>
                <child>
                  <object class="GtkBox">
                    <property name="spacing">12</property>
                    <child>
                      <object class="GtkLabel" id="font_label"/>
                    </child>
                    <child>
                      <object class="GtkImage">
                        <property name="icon-name">go-next-symbolic</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Wrap Lines</property>
                <property name="activatable-widget">wrap_lines_switch</property>
                <child>
                  <object class="GtkSwitch" id="wrap_lines_switch">
                    <property name="valign">center</property>
                    <property name="action-name">settings.wrap-lines</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="yes">Color Scheme</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Light</property>
                <property name="activatable-widget">light_check</property>
                <child type="prefix">
                  <object class="GtkCheckButton" id="light_check">
                    <property name="valign">center</property>
                    <property name="action-name">settings.color-scheme</property>
                    <property name="action-target">'light'</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Dark</property>
                <property name="activatable-widget">dark_check</property>
                <child type="prefix">
                  <object class="GtkCheckButton" id="dark_check">
                    <property name="valign">center</property>
                    <property name="group">light_check</property>
                    <property name="action-name">settings.color-scheme</property>
                    <property name="action-target">'dark'</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">System Default</property>
                <property name="activatable-widget">default_theme_check</property>
                <child type="prefix">
                  <object class="GtkCheckButton" id="default_theme_check">
                    <property name="valign">center</property>
                    <property name="action-name">settings.color-scheme</property>
                    <property name="action-target">'system-default'</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesPage">
        <property name="title" translatable="yes">Custom Tools</property>
        <property name="name">custom-tools</property>
        <property name="icon-name">applications-utilities-symbolic</property>
        <child>
          <object class="GtkScrolledWindow">
            <child>
              <object class="GtkViewport">
                <child>
                  <object class="AdwClamp">
                    <property name="maximum-size">600</property>
                    <property name="margin-start">8</property>
                    <property name="margin-end">8</property>
                    <property name="valign">start</property>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Custom tools</property>
                            <property name="halign">start</property>
                            <style>
                              <class name="heading"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkListBox" id="custom_tools_listbox">
                            <property name="valign">start</property>
                            <property name="selection-mode">none</property>
                            <style>
                              <class name="content" />
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
